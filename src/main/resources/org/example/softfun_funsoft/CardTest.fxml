<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Card Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="cardNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Expiration Month:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="expMonthField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Expiration Year:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="expYearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="CVC:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="cvcField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Submit" fx:id="submitButton" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>